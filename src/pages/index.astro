---
import HomeLayout from '../layouts/HomeLayout.astro';
import { Image } from 'astro:assets';
import headshot from '../assets/headshots/1.png';


---

<HomeLayout title="Skyler Yuda | Actor | Voice & On Camera">
    <!-- Direct headshot implementation with Image component -->
    <div class="fixed inset-0 w-full h-full z-[999] pointer-events-none flex items-center justify-center">
        <Image 
            src={headshot} 
            alt="Skyler Yuda Headshot"
            class="h-full w-auto object-contain grayscale opacity-50 scale-x-[-1]"
            loading="eager"
            decoding="sync"
            fetchpriority="high"
        />
    </div>
    
    <div class="text-white">
        <main class="flex items-center justify-center py-6 sm:py-8 md:py-10 lg:py-12 mb-16">
            <div class="relative isolate">
                <div
                    class="absolute top-0 right-0 left-1/2 -z-10 -ml-24 transform-gpu blur-3xl lg:ml-24 xl:ml-48"
                    aria-hidden="true"
                >
                    <div
                        class="aspect-801/1036 w-[50.0625rem] bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-30"
                        style="clip-path: polygon(63.1% 29.5%, 100% 17.1%, 76.6% 3%, 48.4% 0%, 44.6% 4.7%, 54.5% 25.3%, 59.8% 49%, 55.2% 57.8%, 44.4% 57.2%, 27.8% 47.9%, 35.1% 81.5%, 0% 97.7%, 39.2% 100%, 35.2% 81.4%, 97.2% 52.8%, 63.1% 29.5%)"
                    >
                    </div>
                </div>
                <div class="w-full">
                    <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8 lg:px-8">
                        <div
                            class="mx-auto max-w-xs sm:max-w-md md:max-w-2xl gap-x-8 md:gap-x-10 lg:gap-x-14 lg:mx-0 lg:flex lg:max-w-none lg:items-center"
                        >
                            <div class="relative w-full px-4 sm:px-6 md:px-8 lg:px-0 max-w-full lg:max-w-xl lg:shrink-0 xl:max-w-2xl slide-in-left">
                                <h1 class="text-4xl font-semibold tracking-tight text-pretty text-white sm:text-6xl lg:text-7xl slide-in-left text-center sm:text-left break-words">
                                    Skyler Yuda
                                </h1>
                                <p class="mt-6 text-lg font-medium text-pretty text-gray-400 sm:text-xl/8 text-center sm:text-left slide-in-left" style="animation-delay: 120ms;">
                                    Professional actor specializing in voice & on-camera work
                                </p>
                                <div class="mt-10 flex flex-col sm:flex-row items-center justify-center sm:justify-start gap-4 sm:gap-6 fade-in" style="animation-delay: 240ms;">
                                    <a
                                        href="/contact"
                                        class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 w-64 sm:w-auto text-center"
                                        style="animation-delay: 120ms;"
                                    >Contact Me</a>
                                    <a 
                                        href="/portfolio" 
                                        class="text-sm font-semibold leading-6 text-white w-64 sm:w-auto text-center sm:text-left py-2.5"
                                        style="animation-delay: 200ms;"
                                    >
                                        View My Work <span aria-hidden="true">â†’</span>
                                    </a>
                                </div>
                            </div>
                            <div
                                class="mt-10 md:mt-14 flex justify-center gap-6 sm:gap-8 sm:justify-start sm:pl-12 md:pl-16 lg:mt-0 lg:pl-0"
                            >
                                <div
                                    class="ml-auto w-44 flex-none space-y-8 pt-32 sm:ml-0 sm:pt-52 lg:order-last lg:pt-36 xl:order-none xl:pt-52"
                                >
                                    <div class="relative slide-in-right" style="animation-delay: 100ms;">
                                        <img
                                            src="https://images.unsplash.com/photo-1557804506-669a67965ba0?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&h=528&q=80"
                                            alt=""
                                            class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                                        />
                                        <div
                                            class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"
                                        >
                                        </div>
                                    </div>
                                </div>
                                <div
                                    class="mr-auto w-44 flex-none space-y-8 sm:mr-0 sm:pt-36 lg:pt-24"
                                >
                                    <div class="relative slide-in-right" style="animation-delay: 180ms;">
                                        <img
                                            src="https://images.unsplash.com/photo-1485217988980-11786ced9454?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&h=528&q=80"
                                            alt=""
                                            class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                                        />
                                        <div
                                            class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"
                                        >
                                        </div>
                                    </div>
                                    <div class="relative slide-in-right" style="animation-delay: 260ms;">
                                        <img
                                            src="https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&crop=focalpoint&fp-x=.4&w=396&h=528&q=80"
                                            alt=""
                                            class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                                        />
                                        <div
                                            class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"
                                        >
                                        </div>
                                    </div>
                                </div>
                                <div class="w-44 flex-none space-y-8 pt-32 sm:pt-0">
                                    <div class="relative slide-in-right" style="animation-delay: 340ms;">
                                        <img
                                            src="https://images.unsplash.com/photo-1670272504528-790c24957dda?ixlib=rb-4.0.3&ixid=MnwxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&crop=left&w=400&h=528&q=80"
                                            alt=""
                                            class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                                        />
                                        <div
                                            class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"
                                        >
                                        </div>
                                    </div>
                                    <div class="relative slide-in-right" style="animation-delay: 420ms;">
                                        <img
                                            src="https://images.unsplash.com/photo-1670272505284-8faba1c31f7d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&h=528&q=80"
                                            alt=""
                                            class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                                        />
                                        <div
                                            class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"
                                        >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
<script>
    // Script to handle responsive elements and animations
    document.addEventListener('DOMContentLoaded', () => {
        // Get all the elements we need to adjust
        const backgroundBase = document.getElementById('background-base');
        const backgroundGradient = document.getElementById('background-gradient');
        const footer = document.querySelector('footer');
        
        // Function to update heights and handle footer visibility
        const updateElements = () => {
            const viewportHeight = window.innerHeight;
            const scrollPosition = window.scrollY || window.pageYOffset;
            const footerPosition = footer ? footer.getBoundingClientRect().top + scrollPosition : Infinity;
            
            // Update all fixed elements to match viewport height
            if (backgroundBase) {
                (backgroundBase as HTMLElement).style.height = `${viewportHeight}px`;
            }
            
            if (backgroundGradient) {
                (backgroundGradient as HTMLElement).style.height = `${viewportHeight}px`;
            }
            
            // Headshot visibility is now handled in the Headshot component
        };
        
        // Update elements on load, resize, and scroll
        updateElements();
        window.addEventListener('resize', updateElements);
        window.addEventListener('scroll', updateElements);
        

    });
</script>

</HomeLayout>
