---
import HomeLayout from '../layouts/HomeLayout.astro';
import { Image } from 'astro:assets';
import headshot from '../assets/headshots/1.png';


---

<HomeLayout title="Skyler Yuda | Actor | Voice & On Camera">
    <!-- Direct headshot implementation with Image component -->
    <div class="fixed inset-0 w-full h-full z-[1] pointer-events-none hidden sm:flex items-center justify-center overflow-hidden">
        <div class="relative w-full h-full max-w-screen-xl mx-auto">
            <Image 
                src={headshot} 
                alt="Skyler Yuda Headshot"
                class="absolute inset-x-0 bottom-0 mx-auto h-auto w-auto max-h-[90vh] max-w-full object-contain grayscale scale-x-[-1] p-4 sm:p-6 md:p-8"
                loading="eager"
                decoding="sync"
                fetchpriority="high"
            />
        </div>
    </div>
    
    <div class="text-white relative z-[10]">
        <main class="flex items-center justify-center py-6 sm:py-8 md:py-10 lg:py-12">
            <div class="relative isolate">
