---
import '../styles/globals.css';
import { Image } from 'astro:assets';
import headshot from '../assets/headshots/1.png';
import backgroundImage from '../assets/backgrounds/background-landing.webp';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Head from '../components/Head.astro';


interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <Head title={title} />
    <body class="antialiased text-white">
        <div class="relative">
            <Image 
            src={backgroundImage} 
            alt="Background Overlay" 
            class="w-full h-full object-cover opacity-40 absolute -z-20"
            quality={80}
        />
            <div class="fixed inset-0 -z-10 overflow-hidden">
                <div class="relative h-screen w-full flex items-center justify-center bg-black">
                    <Image 
                    src={backgroundImage} 
                    alt="Background" 
                    class="fixed w-full h-full object-cover opacity-100 blur-[2px]"
                    quality={80}
                />
                <Image 
                    src={headshot} 
                    alt="Background" 
                    class="h-screen w-auto max-w-none grayscale object-center opacity-90"
                    quality={90}
                />
            </div>
            <div class=" h-screen w-screen fixed top-0 opacity-40 bg-black"></div>
        </div>
        
        <div class="flex flex-col min-h-screen">
            <div class="flex flex-col w-full max-w-5xl mx-auto grow">
                <Header />
                <main class="grow">
                    <slot />
                </main>
                <Footer />
            </div>
        </div>
    </body>
</html>
