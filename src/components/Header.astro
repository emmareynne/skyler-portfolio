---
import Logo from '../components/Logo.astro';
import SYLogo from './SYLogo.astro';

// Get the current URL path to determine active link
const currentPath = Astro.url.pathname;

const navItems = [
    { linkText: 'Voice', href: '/voice' },
    { linkText: 'On-Camera', href: '/on-camera' },
    { linkText: 'Demo Reels', href: '/demo-reels' },
    { linkText: 'Contact', href: '/contact' },
];

// Check if we're on the home page
const isHomePage = currentPath === '/';
---

<nav class:list={["transition-colors duration-300", isHomePage ? "bg-transparent" : "bg-gray-800"]} x-data="{ open: false, init() { Alpine.effect(() => { document.body.classList.toggle('overflow-hidden', this.open); }) } }" @keydown.escape="open = false" x-id="['mobile-menu']">
    <div class="container mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="relative flex h-16 items-center justify-between">
            <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                <!-- Mobile menu button-->
                <button
                    type="button"
                    class:list={[
                        "relative inline-flex items-center justify-center rounded-md p-2 focus:outline-hidden transition-all duration-300 ease-in-out transform",
                        isHomePage 
                            ? "text-white hover:text-white/80 focus:ring-2 focus:ring-white focus:ring-inset" 
                            : "text-gray-400 hover:bg-gray-700 hover:text-white focus:ring-2 focus:ring-white focus:ring-inset"
                    ]}
                    :class="{'rotate-180': open}"
                    aria-controls="mobile-menu"
                    aria-expanded="false"
                    @click="open = !open"
                    :aria-expanded="open"
                >
                    <span class="absolute -inset-0.5"></span>
                    <span class="sr-only">Open main menu</span>
                    <!--
            Icon when menu is closed.

            Menu open: "hidden", Menu closed: "block"
        -->
                    <svg
                        class="size-6"
                        :class="{'block': !open, 'hidden': open}"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        aria-hidden="true"
                        data-slot="icon"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
                    </svg>
                    <!--
            Icon when menu is open.

            Menu open: "block", Menu closed: "hidden"
        -->
                    <svg
                        class="size-6"
                        :class="{'hidden': !open, 'block': open}"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        aria-hidden="true"
                        data-slot="icon"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M6 18 18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
                <div class="flex shrink-0 items-center">
                    <a href="/">
                        <SYLogo width={35} height={35} />
                    </a>
                </div>
                <div class="hidden sm:ml-6 sm:block">
                    <div class="flex space-x-4">
                        {
                            navItems.map((item) => {
                                console.log(item.href)
                                const isActive = currentPath === item?.href || 
                                                (currentPath === '/' && item?.href === '/') ||
                                                (currentPath?.startsWith(item?.href) && item?.href !== '/');
                                return (
                                    <a
                                        href={item?.href}
                                        class:list={[
                                            'rounded-md px-3 py-2 text-sm font-medium transition-colors duration-300',
                                            isHomePage 
                                                ? (isActive 
                                                    ? 'text-white font-bold border-b-2 border-white' 
                                                    : 'text-white hover:text-white/80')
                                                : (isActive
                                                    ? 'bg-gray-900 text-white'
                                                    : 'text-gray-300 hover:bg-gray-700 hover:text-white')
                                        ]}
                                        aria-current={isActive ? 'page' : undefined}
                                    >
                                        {item?.linkText || 'Link'}
                                    </a>
                                );
                            })
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile menu, show/hide based on menu state. -->
        <!-- Backdrop -->
        <template x-teleport="body">
            <div 
                class="fixed inset-0 bg-black/50 backdrop-blur-sm z-10"
                x-show="open"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0"
                x-transition:enter-end="opacity-100"
                x-transition:leave="transition ease-in duration-150"
                x-transition:leave-start="opacity-100"
                x-transition:leave-end="opacity-0"
                @click="open = false"
                x-cloak
            ></div>
        </template>
        
        <!-- Mobile menu container that stays in the original DOM -->
        <div 
            class="sm:hidden fixed top-16 left-0 right-0 z-20 pointer-events-none hidden" 
            id="mobile-menu-container"
        >
            <div class="space-y-1 mx-2 px-4 py-3 bg-gray-800/90 backdrop-blur-sm rounded-lg shadow-lg border border-gray-700/50 pointer-events-auto">
                {
                    navItems.map((item, index) => {
                        const isActive = currentPath === item?.href || 
                                        (currentPath === '/' && item?.href === '/') ||
                                        (currentPath?.startsWith(item?.href) && item?.href !== '/');
                        return (
                            <a
                                href={item?.href || '#'}
                                class:list={[
                                    'mobile-menu-item block rounded-md px-3 py-2 text-base font-medium transition-all duration-300 transform',
                                    isHomePage 
                                        ? (isActive 
                                            ? 'text-white font-bold border-b-2 border-white' 
                                            : 'text-white hover:text-white/80 hover:translate-x-1')
                                        : (isActive
                                            ? 'bg-gray-900 text-white'
                                            : 'text-gray-300 hover:bg-gray-700 hover:text-white hover:translate-x-1')
                                ]}
                                aria-current={isActive ? 'page' : undefined}
                                data-index={index}
                            >
                                {item?.linkText || 'Link'}
                            </a>
                        );
                    })
                }
            </div>
        </div>
        
        <!-- Alpine.js teleport for the mobile menu -->
        <template x-teleport="body">
            <div 
                class="sm:hidden fixed top-16 left-0 right-0 z-20 pointer-events-none" 
                :id="$id('mobile-menu')"
                x-show="open" 
                x-transition:enter="transition ease-out duration-200" 
                x-transition:enter-start="opacity-0 -translate-y-2" 
                x-transition:enter-end="opacity-100 translate-y-0" 
                x-transition:leave="transition ease-in duration-150" 
                x-transition:leave-start="opacity-100 translate-y-0" 
                x-transition:leave-end="opacity-0 -translate-y-2"
                x-cloak
                x-init="$nextTick(() => {
                    // Clone the menu items from the hidden container
                    const container = document.getElementById('mobile-menu-container');
                    if (container) {
                        $el.innerHTML = container.innerHTML;
                    }
                })"
            ></div>
        </template>
    </div>
</nav>
