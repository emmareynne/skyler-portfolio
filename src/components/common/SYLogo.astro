---
interface Props {
    class?: string;
    width?: number;
    height?: number;
}

const { class: className = '', width = 200, height = 200 } = Astro.props;
---

<div class={className}>
    <svg width={width} height={height} viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
        <!-- Background circle -->
        <circle cx="100" cy="100" r="95" fill="#000000" />
        
        <!-- S letter -->
        <text x="60" y="120" font-family="Arial, sans-serif" font-size="80" font-weight="bold" fill="#b14aff">S</text>
        
        <!-- Y letter -->
        <text x="110" y="120" font-family="Arial, sans-serif" font-size="80" font-weight="bold" fill="#ffffff">Y</text>
    </svg>
</div>
