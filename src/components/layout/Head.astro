---
import { AstroFont } from 'astro-font';

interface Props {
    title: string;
    description?: string;
    ogImage?: string;
}

const { 
    title, 
    description = "Skyler Yuda - Voice and On-Camera Actor", 
    ogImage = "/images/og-image.jpg" 
} = Astro.props;
---

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Performance optimization meta tags -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="#111111">
    <meta name="color-scheme" content="dark light">
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    
    <!-- Alpine.js x-cloak directive to hide elements until Alpine is loaded -->
    <style>
        [x-cloak] { display: none !important; }
    </style>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Fonts optimized for performance -->
    <AstroFont
        config={[
            {
                name: 'Metal Mania',
                googleFontsURL: 'https://fonts.googleapis.com/css2?family=Metal+Mania&display=swap',
                src: [],
                preload: false, // Only preload critical fonts
                display: 'swap',
                selector: '.font-metal',
                fallback: 'sans-serif'
            },
            {
                name: 'Faculty Glyphic',
                googleFontsURL: 'https://fonts.googleapis.com/css2?family=Faculty+Glyphic:wght@400;700&display=swap', // Reduced weights
                src: [],
                preload: true, // Preload primary heading font
                display: 'swap',
                selector: '.font-heading',
                fallback: 'sans-serif'
            },
            {
                name: 'Frank Ruhl Libre',
                googleFontsURL: 'https://fonts.googleapis.com/css2?family=Frank+Ruhl+Libre:wght@400;700&display=swap', // Reduced weights
                src: [],
                preload: true, // Preload primary body font
                display: 'swap',
                selector: '.font-sans, .font-serif',
                fallback: 'serif'
            }
        ]}
    />
    
    <!-- Resource hints for performance -->
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    
    <!-- Add View Transitions API for page transitions -->
    <meta name="view-transition" content="same-origin">
    
    <!-- Preload critical assets -->
    <link rel="preload" href="/images/background.jpg" as="image" fetchpriority="high">
    
    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Alpine.js for interactivity and transitions -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <slot />
</head>
