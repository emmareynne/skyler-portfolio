---
import GradientBackground from './GradientBackground.astro';
---

<div class="relative isolate overflow-hidden py-16 sm:py-24">
    <!-- Gradient background positioned at the top -->
    <GradientBackground 
        position="top"
        opacity={20}
        colors={{ from: '#ff80b5', to: '#9089fc' }}
        blur={3}
        zIndex={-10}
    />
    
    <!-- Content goes here -->
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
            <h2 class="text-3xl font-bold text-white font-heading">Example Section</h2>
            <p class="mt-6 text-lg leading-8 text-gray-300">
                This section demonstrates how to use the GradientBackground component.
                The gradient is positioned at the top of this container.
            </p>
        </div>
    </div>
</div>

<!-- Another example with different position and colors -->
<div class="relative isolate overflow-hidden py-16 sm:py-24 bg-gray-900">
    <!-- Gradient background positioned at the bottom-right -->
    <GradientBackground 
        position="bottom-right"
        opacity={30}
        colors={{ from: '#4f46e5', to: '#06b6d4' }}
        blur={2}
    />
    
    <!-- Content goes here -->
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
            <h2 class="text-3xl font-bold text-white font-heading">Another Example</h2>
            <p class="mt-6 text-lg leading-8 text-gray-300">
                This section shows a different gradient position and color scheme.
                The gradient is positioned at the bottom-right of this container.
            </p>
        </div>
    </div>
</div>
